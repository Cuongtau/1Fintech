
@{
    ViewBag.Title = "ErrorInternalServer";
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}

<!-- content -->
<div class="container-fluid">
    <div class="row-fluid">
        <div class="col-lg-12">
            <div class="centering text-center">
                <img src="@Html.Raw(Pay365.Utils.Config.Domain)images/error-page/500error.png" />
                <div class="text-center">
                    <h2 class="without-margin">Don't worry. It's <span class="text-danger"><big>500</big></span> error only.</h2>
